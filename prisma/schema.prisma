generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  price       String
  stock       Int
  image       String
  description String
  orders      orders[]
}

model sessions {
  id     Int    @id @default(autoincrement())
  token  String
  userId Int
  users  users  @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model users {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  name     String
  password String
  cpf      String     @unique
  cell     String     @unique
  city     String
  address  String
  orders   orders[]
  sessions sessions[]
}

model orders {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  amount    String
  value     String
  signal    Boolean  @default(false)
  date      DateTime @default(now()) @db.Date
  concluded Boolean  @default(false)
  products  products @relation(fields: [productId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  users     users    @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
